generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id   String @id @default(uuid())
  slug String @unique

  name  String
  color String

  budgets Budget[]
}

enum BudgetType {
  INPUT
  OUTPUT
}

model Budget {
  id String @id @default(uuid())

  title       String
  description String
  day         DateTime
  amount      Float

  type BudgetType

  categoryId String
  category   Category @relation(fields: categoryId, references: id)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
